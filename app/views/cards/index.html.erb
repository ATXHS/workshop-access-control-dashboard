<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Card ID</th>
      <th>User</th>
      <th>Nick</th>
      <th>After hours</th>
      <th>Valid from</th>
      <th>Expires</th>
      <th>Disabled</th>
      <th>Magic</th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr id="card-<%= card.card_id %>" class="<%= card.disabled ? 'disabled' : 'enabled'%>">
        <td><%= link_to card.card_id, card %></td>
        <td><%= card.user %></td>
        <td><%= card.nick %></td>
        <td><%= card.after_hours %></td>
        <td><%= l card.valid_from %></td>
        <td><%= l card.expires %></td>
        <td><%= card.disabled %></td>
        <td><%= card.magic %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @cards %>

<p>
  <%= link_to 'New Card', new_card_path %>
</p>
