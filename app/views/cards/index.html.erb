<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Nick</th>
      <th>After hours</th>
      <th>Expires</th>
      <th>Valid from</th>
      <th>Disabled</th>
      <th>Magic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.user %></td>
        <td><%= card.nick %></td>
        <td><%= card.after_hours %></td>
        <td><%= card.expires %></td>
        <td><%= card.valid_from %></td>
        <td><%= card.disabled %></td>
        <td><%= card.magic %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
