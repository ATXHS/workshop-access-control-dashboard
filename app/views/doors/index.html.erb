<p id="notice"><%= notice %></p>

<h2>Doors</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Default unlocked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doors.each do |door| %>
      <tr>
        <td><%= door.name %></td>
        <td><%= door.default_unlocked %></td>
        <td><%= link_to 'Show', door %></td>
        <td><%= link_to 'Edit', edit_door_path(door) %></td>
        <td><%= link_to 'Destroy', door, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @doors %>

<p>
  <%= link_to 'New Door', new_door_path %>
</p>
